<style>
  #searchBtn i {
    display: inline;
    margin-right: 0.2rem;
  }

  #searchBtn, .auth-btn {
    border-radius: 1.3rem;
  }

  #srcInput {
    width: 20rem;
    height: 2.5rem;
    border-radius: 1rem;
    margin-right: 0.5rem;
    padding-left: 10px;
    border: 1px solid rgb(74, 74, 138);
  }
  @media (max-width: 768px) { 
  .navbar-nav .nav-link,
  .navbar-nav .btn,
  .nav-item {
    margin-bottom: 0.5rem;
  }

  .navbar-collapse {
    position: static !important;
    background-color: #f8f9fa;
    border-radius: 1rem;
    padding: 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    z-index: 0;
  }

  .position-absolute.start-50.translate-middle-x {
    position: static !important;
    transform: none !important;
    margin-bottom: 1rem;
  }

  /* Flex container for input + button */
  .navbar-collapse form.d-flex {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    flex-wrap: nowrap;
    overflow: hidden;
  }

  #srcInput {
    flex: 1 1 auto; /* Flexible but doesn't shrink too small */
    min-width: 0; /* Prevents overflow */
    height: 2.5rem;
    margin-bottom: 0;
  }

  #searchBtn {
    flex: 0 0 auto; /* Fixed width */
    height: 2.5rem;
    padding: 0 0.8rem;
    white-space: nowrap;
  }

  .navbar-nav.ms-auto {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
}

</style>
<body>
    <nav class="navbar navbar-expand-md bg-body-light sticky-top">
        <div class="container-fluid">

          <a class="navbar-brand" href="/listings"><i class="fa-solid fa-plane-departure"></i></a>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNav">

            <div class="navbar-nav">
              <a class="nav-link" aria-current="page" href="/listings"><b>Home</b></a>
              <a class="nav-link" href="/listings/new"><b>Add new listing</b></a>
            </div>
            
            <!-- SEARCH BUTTON -->
            <div class="position-absolute start-50 translate-middle-x">
              <form class="d-flex" role="search">
                <input type="text" id="srcInput" placeholder="Search destination..." class="form-control">
                <button class="btn btn-outline-primary" type="submit" id="searchBtn"> <i class="fa-solid fa-magnifying-glass inline"></i>Search</button>
              </form>
            </div>

            <div class="navbar-nav ms-auto">
              <%# currUser from resp.locals.currUser=req.user in app.js middleware %>
              <% if (!currUser) { %>
                  <li class="nav-item me-2">
                    <a href="/signup" class="btn btn-outline-primary rounded-pill px-1.5">SignUp</a>
                  </li>
                  <li class="nav-item">
                      <a href="/login" class="btn btn-outline-success rounded-pill px-1.5">Login</a>
                  </li>
              <% }%>
              <% if (currUser) { %>
                  <li class="nav-item">
                    <a href="/logout" class="btn btn-outline-danger rounded-pill px-1">Logout</a>
                  </li>
              <% } %>
            </div>

        </div>
      </nav>
</body>