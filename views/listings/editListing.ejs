<% layout("/layouts/boilerplate.ejs") %>

<body>    
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="mt-3 mb-3">Edit the Listing</h2>
            <form action="/listings/<%=listingData._id%>?_method=PATCH" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%=listingData.title%>" class="form-control" type="text" required>
                    <div class="valid-feedback">
                        Looks Good !!
                    </div>
                    <div class="invalid-feedback">
                        Please choose a username.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea  name="listing[description]" class="form-control" rows="2" required> <%=listingData.description%> </textarea>
                    <div class="invalid-feedback">
                        Please add a few lines about the listing
                    </div>
                    <div class="valid-feedback">
                        Looks fine !!
                    </div>
                </div>
                
                <div class="mb-3 col-8">
                    <label>Existing listing image</label> <br>
                    <img src="<%= originalImageUrl %>" alt="Existing listing image" style="height: 150px; width: 250px;"> 
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="listing[image[filename]]" class="form-control" type="file">
                </div>

                <div class="mb-3">
                    <label for="category" class="block mb-2 font-semibold">Choose a different category</label> <br>
                    <select name="listing[category]" id="category" class="p-2 border rounded-md w-full form-control">
                        <option disabled selected><%= listingData.category %></option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Historical">Historical</option>
                        <option value="Beaches">Beaches</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Hill Station">Hill Station</option>
                        <option value="Boating">Boating</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Snowy">Snowy</option>
                        <option value="Nature">Nature</option>
                        <option value="Other">Other</option>
                    </select>
                    <div class="invalid-feedback">
                        Select a category for the listing
                    </div>
                </div>
                

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" value="<%=listingData.price%>" class="form-control" type="number" required>
                        <div class="invalid-feedback">
                            Price can NOT be empty
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" value="<%=listingData.country%>" class="form-control" type="text" required>
                        <div class="invalid-feedback">
                            Please provide a valid country.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" value="<%=listingData.location%>" class="form-control" type="text" required>
                    <div class="invalid-feedback">
                        Please provide valid location.
                    </div>
                </div>

                <button class="btn btn-primary mb-3 edit-btn">Submit</button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>



