<% layout("/layouts/boilerplate.ejs") %>

<body>    
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="mt-3 mb-3">Edit the Listing</h2>
            <form action="/listings/<%=listingData._id%>?_method=PUT" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="title" value="<%=listingData.title%>" class="form-control" type="text" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea  name="description" class="form-control" required> <%=listingData.description%> </textarea>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Edit existing Image</label>
                    <input name="image" class="form-control" type="text" placeholder="<%= listingData.image.url ? listingData.image.url : listingData.image %>">

                    <p style="text-align: center; margin-bottom: 2px;">OR</p>   
                    <input name="image" class="form-control" type="file">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="price" value="<%=listingData.price%>" class="form-control" type="number" required>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="country" value="<%=listingData.country%>" class="form-control" type="text" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="location" value="<%=listingData.location%>" class="form-control" type="text" required>
                </div>

                <button class="btn btn-dark mb-3">Submit</button>
            </form>
        </div>
    </div>
</body>


