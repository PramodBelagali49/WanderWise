<%- layout("/layouts/boilerplate.ejs") %>
<body>
    <% if (categoryListings.length) { %>
        <h2 style="margin-left: 1rem; margin-top: 1rem;"> <%= categoryListings[0].category %> </h2>
    <% } else { %>
        <h1 style="text-align: center; margin-top: 8rem;">No Listings under this category</h1>
        <form action="/listings/new" style="text-align: center; margin-top: 2rem;">
            <button class="btn btn-primary">Add New Listing</button>
        </form>
    <% } %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of categoryListings) { %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
              <div class="card col">
                    <img src="<%= listing.image.url %>" alt="Listing Image"
                        class="card-img-top" 
                        alt="listing_image" 
                        style="height: 20rem;"
                    />
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b> <%= listing.title %> </b> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                      </p>
                    </div>
                  </div>
            </a>
        <% } %>
    </div>
</body>
          